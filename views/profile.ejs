      readURL(input)

    }
    function readURL(input) {
      console.log('read');
      $('#imgPreview').attr('src', '');

      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
          $('#imgPreview').attr('src', e.target.result);
          try {
            cropper.destroy();
          }
          catch (err){
            console.log(err);
          }
          startCropper();
        }

        reader.readAsDataURL(input.files[0]);
      }
    }
  </script>
