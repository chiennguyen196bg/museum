          }
        },
        error: function (err) {
          console.log(err);
          try {
            err = JSON.parse(err.responseText);
            alert(err.error)
          }
          catch (e){
            console.log(e);
            alert('Có lỗi xảy ra. Vui lòng thử lại')
          }
          finally {
            ob('inputPassword').value = ''
            ob('inputRepeat').value = ''
            ob('oldPassword').value = ''
          }
        }
      })
      // $('#btnSubmit').click();
      
    }
    function handleChangeAvatar(input) {
      // console.log(input.files[0]);
